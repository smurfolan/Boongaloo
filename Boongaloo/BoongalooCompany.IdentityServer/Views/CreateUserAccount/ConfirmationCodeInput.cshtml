@model BoongalooCompany.IdentityServer.Models.ConfirmationCodeInputModel

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<h3 style="color: whitesmoke; text-align: center;">Enter code</h3>

@using (Html.BeginForm("SubmitConfirmationCode", "CreateUserAccount"))
{
    <fieldset style="margin: 0 auto; width:80%;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
        </div>
        <div class="form-group" style="text-align: center">
            <button class="btn btn-primary">Send</button>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
